[ -n "$DEBUG" ] && set -x

if [ $# -lt 2 -o $# -gt 4 ] ; then
  echo "Usage: $(basename $0) <eyesis_correction_xml> <source_dir> [ <results_dir>  <output_file> ]"
  echo
  echo "- When no output file is specified, parallel is run immediately"
  echo "- Paths for corrxml can be specified as environment variables"
  echo "- CHANNELS, IMAGEJMEM, REMOTELOGGER, FILELIST, LOGDIR, REMOTESCRIPT too"
  exit 1
fi

XML="$1"
SRCDIR="$2"
DSTDIR="$3"
OUTPUT="$4"

[ -z "$CHANNELS" ] && CHANNELS=9  # channels per job (xml)
[ -z "$IMAGEJMEM" ] && IMAGEJMEM=7150m
[ -z "$REMOTELOGGER" ] && REMOTELOGGER=remote-scripts/paralog.sh

getTimestamps() {
    cat "$FILELIST" | while read JP4 ; do
        echo $(basename $JP4) | sed -r -n -e 's/^([0-9]{10}_[0-9]{6})_.*/\1/p'
    done | sort -u
}

NOW=$(date +%s) # _%N

if [ -z "$OUTPUT" ] ; then
     OUTPUT="post_processing-$NOW"
     RUN=yes
fi

[ -z "$LOGDIR" ] && LOGDIR=log/post_processing
mkdir -p $LOGDIR
[ -z "$REMOTESCRIPT" ] && REMOTESCRIPT=remote-scripts/post_process.sh
mkdir -p $SRCDIR/post_processing

if [ -z "$FILELIST" ] ; then
  FILELIST="/tmp/filelist_$NOW.tmp"
  find "$SRCDIR" -maxdepth 1 -name \*.jp4 > $FILELIST
else
  echo "Using files listed in $FILELIST" 1>&2
fi

# FILELIST is also used in corrxml.sh
export FILELIST


echo "#!/usr/bin/parallelbang -I _XML_ --ungroup --sshloginfile .. --joblog $LOGDIR/$(basename $OUTPUT).log --bf $REMOTESCRIPT --bf $REMOTELOGGER $REMOTESCRIPT _XML_ $IMAGEJMEM \\\\\\\\| $REMOTELOGGER $(basename $OUTPUT)" | tee "$OUTPUT"
chmod +x "$OUTPUT"

doit() {
  getTimestamps | while read TIMESTAMP ; do
    OUTXML=$SRCDIR/post_processing/${NOW}-$TIMESTAMP.xml
    corrxml.sh $XML $SRCDIR $DSTDIR $OUTXML $CHANNELS $TIMESTAMP
    echo $OUTXML
  done
}

if [ -n "$RUN" ] ; then
  echo "#### running $OUTPUT" 1>&2
  doit | tee -a "$OUTPUT" | parallel -I _XML_ --ungroup --sshloginfile ..  --joblog $LOGDIR/$(basename $OUTPUT).log --bf $REMOTESCRIPT --bf $REMOTELOGGER $REMOTESCRIPT _XML_ $IMAGEJMEM \| $REMOTELOGGER $(basename $OUTPUT)
else
  doit | tee -a "$OUTPUT"
fi

echo "#### saved as $OUTPUT" 1>&2
