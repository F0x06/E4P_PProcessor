[ -n "$DEBUG" ] && set -x

# ignore shebang options since limited to 128 characters
BANG_OPTIONS="$1"
shift

INPUT="$1"
shift

# grab hashbang options with sed instead
BANG_OPTIONS=$(head -n 1 "$INPUT" | sed -r -e 's/.*'$(basename "$0")'(.*)/\1/')

if [ "$1" == "-f" ] ; then
  FOLLOW=-f
  shift
fi

(
  SUBASH_PID=$BASHPID
  tail -n +2 $FOLLOW "$INPUT" | while read l ; do
    if [ "$l" == "EOP" ] ; then
      EOP=1
      kill $SUBASH_PID
      break
    fi
    echo $l
  done
  
) | parallel --gnu $@ $BANG_OPTIONS

